[Unit]
Description=gunicorn daemon for paste_capsule

[Service]
Type=forking
PIDFile=/opt/paste_capsule/paste_capsule.pid
User=www-data
Group=www-data
ExecStart=/opt/paste_capsule/bin/gunicorn -k gevent --error-logfile - --access-logfile - -p /opt/paste_capsule/paste_capsule.pid paste_capsule.paste_capsule:app
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
PrivateTmp=true
